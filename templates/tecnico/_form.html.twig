{{ form_start(
    form, {
        'attr': {'novalidate': 'novalidate'}
    }
) }}

{% if not form.vars.valid %}
    <div class="alert alert-danger">
        {{ form_errors(form) }}
    </div>
{% endif %}

<div class="form-group">
    {{ form_label(form.cpf) }}
    {{
        form_widget(form.cpf, {
            'attr': {
                'maxlength': 14,
                'onkeydown': 'mascara(this, mascaraCpf);'
            }
        })
    }}
    {{ form_errors(form.cpf) }}
</div>

<div class="form-group">
    {{ form_label(form.nome_completo) }}
    {{ form_widget(form.nome_completo) }}
    {{ form_errors(form.nome_completo) }}
</div>

<div class="form-group">
    {{ form_label(form.dt_nasc) }}
    {{ form_widget(form.dt_nasc) }}
    {{ form_errors(form.dt_nasc) }}
</div>

<div class="form-group">
    {{ form_label(form.valor_hora) }}
    {{
        form_widget(form.valor_hora, {
            'attr': {
                'onkeydown': 'mascara(this, mascaraNumero);'
            }
        })
    }}
    {{ form_errors(form.valor_hora) }}
</div>

{{  form_widget(form.enviar) }}

{{ form_rest(form) }}
