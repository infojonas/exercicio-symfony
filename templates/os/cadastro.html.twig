        let obj, masc;

        function mascara(objeto,mascara) {
            obj = objeto;
            masc = mascara;

            setTimeout('executaMascara()',1);
        }

        function executaMascara() {
            obj.value = masc(obj.value);
        }

        function mascaraNumero(num){
            num = num.replace(/\D/g,"");

